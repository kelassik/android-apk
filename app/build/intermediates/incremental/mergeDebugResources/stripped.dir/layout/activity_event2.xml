<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".activity.EventActivity2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_event2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/img_even2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tb_event2"
        android:src="@drawable/even"/>

    <LinearLayout
        android:id="@+id/lin_event2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_even2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_eventcal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_calendar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/10/2021"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_access_time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 PM - 9 PM"
            android:textColor="@color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tx_dis_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/lin_event2"/>

    <TextView
        android:id="@+id/tx_isi_even2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorep Ipsum"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_below="@id/tx_dis_event"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_even"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="GET"
        android:padding="8dp"
        android:textColorHint="@color/white"
        android:layout_margin="16dp"
        android:layout_below="@id/tx_isi_even2"
        android:background="@drawable/bg_card_blue"/>

</RelativeLayout>