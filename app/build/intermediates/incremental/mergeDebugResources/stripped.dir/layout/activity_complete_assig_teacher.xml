<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tb_assig_complete_teacher"
        layout="@layout/bar_complete_assig_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/relassigcompleteteacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tb_assig_complete_teacher"
        android:padding="8dp">

        <EditText
            android:id="@+id/edsearchteachercomplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/imgfiltersearch"
            android:background="@drawable/bg_corner_radius"
            android:textSize="26sp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imgfiltersearch"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/filterassig" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclecompleteteacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relassigcompleteteacher"
        android:layout_margin="16dp" />

</RelativeLayout>