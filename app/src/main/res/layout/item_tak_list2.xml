<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvitemtaskstudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/brownlight">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/circleimage_view_student2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/pixabay" />

            <TextView
                android:id="@+id/txmateritask2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@id/circleimage_view_student2"
                android:text="Statistika"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txcomptask2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txmateritask2"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/circleimage_view_student2"
                android:text="Task Complete"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tscomplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Review"
                android:textColor="@color/white"
                android:textSize="6sp"
                android:background="@drawable/bg_card_blue"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tscorrection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tscomplete"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_card_blue"
                android:padding="4dp"
                android:text="Task Review"
                android:textColor="@color/white"
                android:textSize="6sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>