<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CompleteActivityAssigTeacher3">

    <include
        android:id="@+id/tb_assig_complete_teacher3"
        layout="@layout/bar_complete_assig_teacher3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardcompletescore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#F6F7DD"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tb_assig_complete_teacher3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/circleimage_view1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/men2" />

            <TextView
                android:id="@+id/txscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/circleimage_view1"
                android:text="Score"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txscore"
                android:layout_toRightOf="@id/circleimage_view1"
                android:text="Statistika"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Input\nNilai"
                android:textStyle="bold"
                android:padding="16dp"
                android:textSize="14sp"
                android:background="@drawable/bg_ongoing_assig"
                android:textColor="#FFFFFF"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#F2F2F2"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardcompletescore">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/txnamateacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Delevou"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/txnamapelajaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statistika"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:layout_below="@id/txnamateacher"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/timesccore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/clock"
                android:layout_below="@id/txnamapelajaran"/>

            <TextView
                android:id="@+id/tglscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22/Aug/2021"
                android:textSize="10sp"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/timesccore"
                android:layout_below="@id/txnamapelajaran"/>

            <ImageView
                android:id="@+id/linescore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/timesccore"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_horizontal" />

            <TextView
                android:id="@+id/petunjukscore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linescore"
                android:background="#FFFFFF"
                android:text=" Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                \n Sed hendrerit pulvinar eleifend commodo erat cursus.
                \n Nunc et pharetra arcu, aliquet velit lobortis donec nunc.
                \n Blandit nunc odio nunc ipsum proin in pulvinar volutpat sem." />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/petunjukscore"
                android:backgroundTint="#E0E0E0"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="16dp">

            <TextView
                 android:id="@+id/tx_submaterial"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="8dp"
                 android:text=" Tugas Statistika"
                 android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_submaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_download"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btncomplete3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_ongoing_assig"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/opensans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>