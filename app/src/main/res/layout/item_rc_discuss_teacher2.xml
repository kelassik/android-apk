<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F7DD"
    android:layout_margin="12dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_discussteacher3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/women2"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txnamadiscussteacher3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gigi Hadad"
        android:textStyle="bold"
        android:textSize="14sp"
        android:fontFamily="@font/opensans"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/img_discussteacher3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txposdiscussteacher3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POST"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_discussteacher3" />

</androidx.constraintlayout.widget.ConstraintLayout>