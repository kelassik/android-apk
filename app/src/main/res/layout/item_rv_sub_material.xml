<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_materialteacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackl"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tx_submaterialteacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Materi 1"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_submaterialteacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_download" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackl"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tx_submaterialteacher1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Materi 1"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_submaterialteacher1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="4dp"
            android:src="@drawable/eye"/>
    </RelativeLayout>

</LinearLayout>